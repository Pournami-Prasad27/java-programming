class Publisher {
    private String name;

    public Publisher(String name) {
        this.name = name;
    }

    public String getName() {
        return name;
    }
}

class Book {
    protected String title;
    protected Publisher publisher;
    protected int year;

    public Book(String title, Publisher publisher, int year) {
        this.title = title;
        this.publisher = publisher;
        this.year = year;
    }

    public void display() {
        System.out.println("Title: " + title);
        System.out.println("Publisher: " + publisher.getName());
        System.out.println("Year: " + year);
    }
}

class Literature extends Book {
    private String genre;

    public Literature(String title, Publisher publisher, int year, String genre) {
        super(title, publisher, year);
        this.genre = genre;
    }

    public void display() {
        super.display();
        System.out.println("Genre: " + genre);
        System.out.println("---------------------------");
    }
}

class Fiction extends Book {
    private String author;

    public Fiction(String title, Publisher publisher, int year, String author) {
        super(title, publisher, year);
        this.author = author;
    }

    public void display() {
        super.display();
        System.out.println("Author: " + author);
        System.out.println("---------------------------");
    }
}

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Create a publisher
        System.out.print("Enter publisher name: ");
        String publisherName = scanner.nextLine();
        Publisher publisher = new Publisher(publisherName);

        // Create a literature book
        System.out.print("\nEnter literature book title: ");
        String literatureTitle = scanner.nextLine();
        System.out.print("Enter literature book year: ");
        int literatureYear = scanner.nextInt();
        scanner.nextLine(); // Consume the newline character
        System.out.print("Enter literature book genre: ");
        String literatureGenre = scanner.nextLine();
        Literature literatureBook = new Literature(literatureTitle, publisher, literatureYear, literatureGenre);

        // Create a fiction book
        System.out.print("\nEnter fiction book title: ");
        String fictionTitle = scanner.nextLine();
        System.out.print("Enter fiction book year: ");
        int fictionYear = scanner.nextInt();
        scanner.nextLine(); // Consume the newline character
        System.out.print("Enter fiction book author: ");
        String fictionAuthor = scanner.nextLine();
        Fiction fictionBook = new Fiction(fictionTitle, publisher, fictionYear, fictionAuthor);

        // Display the details of the books
        System.out.println("\nDetails of Literature Book:");
        literatureBook.display();

        System.out.println("Details of Fiction Book:");
        fictionBook.display();

        scanner.close();
    }
}
